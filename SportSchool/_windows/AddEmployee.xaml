<Window x:Class="SportSchool._windows.AddEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportSchool._windows"
        mc:Ignorable="d" Background="#605750"
        Title="Добавление сотрудника" Height="235" Width="325"
        WindowStartupLocation="CenterScreen"
        Icon="\_resources\weight.png">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Имя и фамилия: " Grid.Row="1" Grid.Column="0"/>
        <TextBlock Text="Телефон: " Grid.Row="2" Grid.Column="0"/>
        <TextBlock Text="Логин: " Grid.Row="3" Grid.Column="0"/>
        <TextBlock Text="Пароль: " Grid.Row="4" Grid.Column="0"/>
        <TextBlock Text="Статус: " Grid.Row="5" Grid.Column="0"/>

        <TextBox x:Name="nameTextBox" Grid.Row="1" Grid.Column="1"/>
        <TextBox x:Name="phoneTextBox" Grid.Row="2" Grid.Column="1"/>
        <TextBox x:Name="loginTextBox" Grid.Row="3" Grid.Column="1"/>
        <TextBox x:Name="passwordTextBox" Grid.Row="4" Grid.Column="1"/>
        <TextBox x:Name="statusTextBox" Grid.Row="5" Grid.Column="1"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="6" Grid.ColumnSpan="2">
            <Button x:Name="closeButton" Content="Выйти" Click="CloseButton_Click"/>
            <Button x:Name="addButton" Content="Добавить" Click="AddButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
